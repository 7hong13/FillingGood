<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4EC6D9</item>
        <item name="colorPrimaryDark">#22b8cf</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyAppThemeFour" parent="Theme.AppCompat.Light">
        <item name="android:timePickerDialogTheme" tools:targetApi="lollipop">@style/MyTimePickerDialogStyle</item>
    </style>
    <style name="MyTimePickerDialogStyle" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="showTitle">false</item>
        <item name="colorControlActivated">#B322cfc9</item>
        <item name="colorAccent">#4EC6D9</item>
    </style>
</resources>
